<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mLayout_operation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_bg_white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_getfrom_camera"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_btn_bg_white"
                android:gravity="center"
                android:text="@string/take_photo"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3c666666" />

            <TextView
                android:id="@+id/tv_getfrom_photo"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_btn_bg_white"
                android:gravity="center"
                android:text="@string/choice_album"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_getfrom_cancel"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_btn_bg_white"
            android:gravity="center"
            android:text="@string/dialog_cancel"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>